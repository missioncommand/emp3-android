<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="wms" type="mil.emp3.dev_test_sdk.MainActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/WmsParametersLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/UrlText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Service"
                    android:text="@string/UrlDefault" />

                <EditText
                    android:id="@+id/VersionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Version"
                    android:text="@string/VersionDefault" />

                <EditText
                    android:id="@+id/TileFormatText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tile Format"
                    android:text="@string/TileFormatDefault" />

                <EditText
                    android:id="@+id/TransparentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Transparent"
                    android:text="@string/TransparentDefault" />

                <EditText
                    android:id="@+id/LayerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Layer"
                    android:text="@string/LayersDefault" />

                <EditText
                    android:id="@+id/ResolutionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Meters per pixel"
                    android:inputType="numberDecimal"
                    android:text="@string/ResolutionDefault" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/CancelButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CancelButton" />

                    <Button
                        android:id="@+id/OKButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/OKButton" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>