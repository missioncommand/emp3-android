<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="left" android:orientation="horizontal"  >

        <TextView
            android:text="Name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feature_name_label" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Feature Name"
            android:ems="10"
            android:id="@+id/feature_name" />

        <CheckBox
            android:text="Visible "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feature_visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Feature Type" />

        <Spinner
            android:id="@+id/feature_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"/>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/feature_parent_list"
        android:listSelector="@android:color/darker_gray"
        android:layout_weight="1"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="center" android:orientation="horizontal"  >
        <CheckBox
            android:id="@+id/feature_is_tactical_graphics"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3"
            android:text="is GEO_MIL_SYMBOL tactical graphics" />
        <Button
            android:id="@+id/apply"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Apply" />
        <Button
            android:id="@+id/done"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Done" />
    </LinearLayout>
</LinearLayout>