<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/WmtsParametersLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/WmtsNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name(required)"/>

            <EditText
                android:id="@+id/WmtsUrlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Service"
                android:text="@string/WmtsUrlDefault" />

            <Spinner
                android:id="@+id/WmtsVersionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="WMTS Version"
                android:spinnerMode="dropdown"
                style="@style/Widget.AppCompat.Spinner.Underlined" />

            <Spinner
                android:id="@+id/WmtsTileFormatText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tile Format"
                android:spinnerMode="dropdown"
                style="@style/Widget.AppCompat.Spinner.Underlined" />

            <EditText
                android:id="@+id/WmtsLayer1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Layer"
                android:text="@string/WmtsLayer1Default" />

            <EditText
                android:id="@+id/WmtsLayer2Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Layer"
                android:text="@string/WmtsLayer2Default" />

            <EditText
                android:id="@+id/WmtsLayer3Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Layer"
                android:text="@string/WmtsLayer3Default" />

            <include android:id="@+id/fill_style_apply_done" layout="@layout/apply_done" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>